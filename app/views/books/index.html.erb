<p id="notice">
	<%= notice %>
</p>

<%= render 'users/side', users: @users %>
<%= render 'books/side', books: @books %>


<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>&nbsp;</th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>user_image</td>
			<td><%= link_to book_path(book) do %>
				<%= book.title %>
				<% end %>
			</td> <!--link_to-->
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
