<p id="notice">
	<%= notice %>
</p>

<% if @book.errors.any? %>
  <p><%= @book.errors.count %>errors  prohibited this obj from being saved:</p>
  <ul>
  	<% @book.errors.full_messages.each do |message| %>
  	<li><%= message %></li>
  	<% end %>
  </ul>
  <% end %>

<%= render 'users/side', users: @users %>
<%= render 'books/side', books: @books %>


<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>&nbsp;</th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= link_to user_path(book.user_id.to_i) do %>
				<%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no-image.jpg",size:'80x80' %>
				<% end %>
				</td>
			<td><%= link_to book_path(book) do %>
				<%= book.title %>
				<% end %>
			</td> <!--link_to-->
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
