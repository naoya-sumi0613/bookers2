

<%= render 'users/side', users: @users %>
<%= render 'books/side', books: @books %>



<h1>Users</h1>
<table>
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no-image.jpg",size:'50x50' %></td>
			<td><%= user.name %></td> <!--link_to-->
			<td><%= link_to "show", user_path(user) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
