

<%= render 'layouts/flash' %>


<%= render 'users/side', users: @users %>
<%= render 'books/side', books: @books %>


<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>&nbsp;</th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= link_to user_path(book.user_id.to_i) do %>
				<%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no-image.jpg",size:'50x50' %>
				<% end %>
				</td>

			<td><%= link_to book_path(book) do %>
				<%= book.title %>
				<% end %>
				</td> <!--link_to-->
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>