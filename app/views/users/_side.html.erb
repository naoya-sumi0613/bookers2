<h1>User info</h1>
<%= form_for(@user) do |user| %>

<p><%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no-image.jpg",size:'80x80' %></p>
<table>
	<thead>
		<tr>
			<th>name</th><td><%= @user.name %> </td>
		</tr>
		<tr>
			<th>introduction</th><td><%= @user.introduction %></td>
		</tr>
		<% end %>
	</thead>
</table>

<p> <% if @user.id == current_user.id %>
        <p><%= link_to "スパナ", edit_user_path(@user) %></p>
    <% end %></p>

